{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":disableDependencyDashboard"
    ],
    "labels": [
        "dependencies"
    ],
    "ignorePaths": [
        "docs/**",
        "nextcloudappstore/scaffolding/**",
        "scripts/**",
        "docker-compose.yml",
        "Dockerfile"
    ],
    "schedule": ["every weekend"],
    "prConcurrentLimit": 4
}
